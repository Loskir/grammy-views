{
  "name": "telegram-bot-template",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "distribute": "yarn build-ts && yarn run-dist",
    "run-dist": "node dist/index.js",
    "develop": "concurrently -r -k -i \"yarn watch-js\" \"yarn watch-ts\"",
    "build-ts": "yarn tsc",
    "watch-ts": "yarn tsc -w",
    "watch-js": "nodemon dist/index.js --config nodemon.json"
  },
  "dependencies": {
    "@grammyjs/storage-file": "^2.0.0",
    "@satont/grammy-mongodb-storage": "^1.0.1",
    "dotenv": "^10.0.0",
    "grammy": "^1.8.2"
  },
  "devDependencies": {
    "@types/node": "16",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  }
}
